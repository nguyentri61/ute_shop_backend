datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid()) 
  email     String   @unique
  password  String
  otp       String?
  otpExpiry DateTime?
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  fullName  String?
  address   String?
  phone     String?
  gender    String?
}